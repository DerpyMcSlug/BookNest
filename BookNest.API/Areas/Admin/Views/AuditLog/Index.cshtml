@model IEnumerable<BookNest.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
    string active(string t) => ViewBag.Tab == t ? "active" : "";
}

<h2 class="mb-4">Audit Logs</h2>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @active("books")"
           asp-route-tab="books">📚 Books</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @active("orders")"
           asp-route-tab="orders">📦 Orders</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @active("security")"
           asp-route-tab="security">🔐 Security</a>
    </li>
</ul>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Time</th>
            <th>Action</th>
            <th>Description</th>
            <th>User</th>
            <th>IP</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Where(l =>
                (ViewBag.Tab == "books" && l.EntityName == "Product") ||
                (ViewBag.Tab == "orders" && l.EntityName == "Order") ||
                (ViewBag.Tab == "security" && l.EntityName == "User")))
        {
            <tr>
                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <span class="badge bg-secondary">@log.ActionType</span>
                </td>
                <td>@log.Description</td>
                <td>@log.User?.Email</td>
                <td>@log.IpAddress</td>
            </tr>
        }
    </tbody>
</table>