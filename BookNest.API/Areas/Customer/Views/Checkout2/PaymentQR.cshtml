@{
    ViewData["Title"] = "VNPay QR Payment";
}

<div class="container text-center mt-5">
    <h3 class="text-primary">Thanh toán bằng VNPay</h3>
    <img src="@Url.Content("~/images/Thanhtoan.jpg")"
         alt="VNPay QR"
         class="img-fluid"
         style="width:100%; max-width:900px; height:auto;" />


    <p class="mt-3 text-muted">
        Đang xác nhận thanh toán...
    </p>

    <div class="spinner-border text-success mt-2"></div>
</div>

<script>
    setTimeout(function () {
        window.location.href =
            "/Customer/Checkout/PaymentSuccess?orderId=@ViewBag.OrderId";
    }, 2000000);
</script>