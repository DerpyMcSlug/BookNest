@model ShoppingCart

@{
    // Map category names to colors
    var categoryColors = new Dictionary<string, string>
    {
        ["Fantasy"] = "rgba(135, 206, 250, 0.35)",      // light sky blue
        ["Romance"] = "rgba(255, 99, 71, 0.6)",      // pink
        ["Mystery"] = "rgba(221, 160, 221, 0.35)",      // plum
        ["Thriller"] = "rgba(255, 99, 71, 0.35)",       // red–orange
        ["Scifi"] = "rgba(72, 209, 204, 0.35)",        // turquoise
        ["Nonfiction"] = "rgba(144, 238, 144, 0.35)",    // green
        ["History"] = "rgba(212, 168, 31, 0.5)"
    };

    var category = Model.Product.Category?.Name ?? "Default";

    // fallback color
    var fallbackColor = "rgba(200, 200, 200, 0.35)";

    // choose category color or fallback
    var color = categoryColors.ContainsKey(category)
        ? categoryColors[category]
        : fallbackColor;
}

<form method="post">
    <input asp-for="ProductId" hidden />
    <input asp-for="Created" hidden />
    <div class="details-wrapper mt-4 mb-4">

        <div class="text-center details-header shaded-header"
             style="background: linear-gradient(to right, @color, transparent);">
            <h3>@Model.Product.Title</h3>
            <p>by @Model.Product.Author</p>
            <!-- <p style="font-size:10px;opacity:0.5;">Category detected: @category</p> -->
        </div>

        <div class="row mt-4">
            <div class="col-lg-3 text-center">
                <img src="@Model.Product.ImageUrl" class="details-image" />

                <span class="details-category mt-3 d-inline-block">@Model.Product.Category.Name</span>
            </div>

            <div class="col-lg-8 offset-lg-1">

                <a asp-action="Index"
                   class="btn btn-outline-primary bg-gradient btn-sm fw-semibold details-back mb-3">
                    Back to Home
                </a>

                <div class="details-price-table">
                    <div class="details-price-row details-price-header">
                        <div class="details-price-cell">Qty</div>
                        <div class="details-price-cell">1–50</div>
                        <div class="details-price-cell">51–100</div>
                        <div class="details-price-cell">100+</div>
                    </div>

                    <div class="details-price-row">
                        <div class="details-price-cell details-price-value">Price</div>
                        <div class="details-price-cell details-price-value">@Model.Product.Price.ToString("c0")</div>
                        <div class="details-price-cell details-price-value">@Model.Product.Price50.ToString("c0")</div>
                        <div class="details-price-cell details-price-value">@Model.Product.Price100.ToString("c0")</div>
                    </div>
                </div>

                <p class="details-description">
                    @Html.Raw(Model.Product.Description)
                </p>

                <div class="row details-count mb-3">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <span class="input-group-text fw-semibold">Count</span>
                            <input asp-for="Count"
                                   type="number"
                                   value="1"
                                   class="form-control text-end" />
                        </div>
                    </div>
                </div>

                <button type="submit"
                        class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold details-addcart">
                    Add to Cart
                </button>

            </div>
        </div>

    </div>
</form>
