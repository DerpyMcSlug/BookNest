@model IEnumerable<BookNest.Models.Product>

@{
    ViewData["Title"] = "Shop";
}

<div class="container mt-4">
    @if (!string.IsNullOrEmpty(Context.Request.Query["search"]))
    {
        <h5 class="mb-3">Search results for: "<strong>@Context.Request.Query["search"]</strong>"</h5>
    }

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card product-card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" />
                        <div class="genre-tag">@product.Category?.Name</div>
                        <div class="card-body text-center">
                            <h6 class="fw-bold">@product.Title</h6>
                            <p class="text-muted small mb-2">@product.Author</p>
                            <p class="text-primary fw-bold">@product.Price.ToString("C")</p>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-sm btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center mt-4">
                <h5 class="text-muted">No books found.</h5>
            </div>
        }
    </div>
</div>