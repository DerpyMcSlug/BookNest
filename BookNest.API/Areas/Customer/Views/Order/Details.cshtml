@model BookNest.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h2 class="mt-3">Order Details</h2>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="History" asp-controller="Order"
       class="btn btn-secondary" style="background:#FC4747;">
        ← Back
    </a>
</div>
<hr />

<div class="card mb-3">
    <div class="card-body">
        <h5><strong>Order ID:</strong> @Model.Order.Id</h5>
        <p><strong>Date:</strong> @Model.Order.OrderDate.ToString("g")</p>
        <p><strong>Status:</strong> @Model.Order.Status</p>
        <p><strong>Total Amount:</strong> @Model.Order.TotalAmount.ToString("C")</p>
    </div>
</div>

<h4>Items</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@((item.UnitPrice * item.Quantity).ToString("C", new System.Globalization.CultureInfo("en-US")))</td>
            </tr>
        }
    </tbody>
</table>