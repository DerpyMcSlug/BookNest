@model IEnumerable<BookNest.Models.Wishlist>

<div class="container mt-4">
    <h2 class="mb-4">My Wishlist</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item p-3 mb-3 shadow-sm rounded">

                    <div class="row align-items-center">

                        <!-- 📘 Image -->
                        <div class="col-3 col-md-2">
                            <img src="@item.Product.ImageUrl"
                                 class="img-fluid rounded"
                                 alt="@item.Product.Title" />
                        </div>

                        <!-- 📖 Info -->
                        <div class="col-6 col-md-7">
                            <h6 class="mb-1 text-uppercase">@item.Product.Title</h6>

                            <p class="text-warning mb-1">
                                by <b>@item.Product.Author</b>
                            </p>

                            <span class="badge bg-info text-white">
                                @item.Product.Category?.Name
                            </span>

                            <p class="text-muted small mt-2 mb-0">
                                @(item.Product.Description?.Length > 300
                                    ? item.Product.Description.Substring(0, 300) + "..."
                                    : item.Product.Description)
                            </p>
                        </div>

                        <!-- 🛒 Actions -->
                        <div class="col-3 col-md-3 text-end">
                            <div class="d-flex flex-column gap-2">
                                <a asp-area="Customer"
                                   asp-controller="Cart"
                                   asp-action="Add"
                                   asp-route-productId="@item.Product.Id"
                                   class="btn btn-success">
                                    Add to Cart
                                </a>

                                <a asp-area="Customer"
                                   asp-controller="Home"
                                   asp-action="Details"
                                   asp-route-productId="@item.Product.Id"
                                   class="btn btn-outline-primary">
                                    Details
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="removeWishlist('@item.Product.Id')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>