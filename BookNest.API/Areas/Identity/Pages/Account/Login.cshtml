@page
@model LoginModel

<div class="login-card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient mt-0 py-4"
         style="background: linear-gradient(135deg, #c5971a, #b8860b) !important;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Log in</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-5">

        <form id="account" method="post" class="row">

            <h4 class="border-bottom pb-3 mb-4 text-center">Use your account to log in</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- EMAIL -->
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                       aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- PASSWORD -->
            <div class="form-floating mb-4 position-relative">
                <input asp-for="Input.Password" id="passwordInput" class="form-control"
                       autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label"></label>

                <!-- Eye Icon -->
                <span class="password-toggle" onclick="togglePassword()" style="font-size: 20px">👁</span>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- REMEMBER ME -->
            <div class="checkbox mb-4">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <!-- SUBMIT -->
            <div class="row align-items-center mt-3">
                <div class="col-auto"> <div class="g-recaptcha" data-sitekey="6LdMkSAsAAAAALeYNHTWIu_qVw49a3pfU8xgLfjY"> </div></div>

                <div class="col">
                    <button id="login-submit" type="submit"
                            class="w-100 btn btn-lg btn-primary"
                            style="background: linear-gradient(135deg, #b8860b, #d4a017) !important;
                       border-radius: 12px !important;
                       border: none !important;">
                        Log in
                    </button>
                </div>
            </div>

            <!-- LINKS -->
            <div class="d-flex justify-content-between pt-3">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                <a asp-page="./ResendEmailConfirmation">Resend confirmation</a>
            </div>
        </form>

        <!-- EXTERNAL LOGIN -->
        <hr class="my-4" />

        <h4 class="text-center">Or log in with</h4>

        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <p class="text-center mt-3">
                No external login providers are configured.
            </p>
        }
        else
        {
            <form id="external-account" method="post" asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div class="text-center mt-3">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" name="provider" value="@provider.Name"
                                class="btn btn-primary mx-2">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function togglePassword() {
            const input = document.getElementById("passwordInput");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}