@page
@model RegisterModel

<div class="auth-dark register-card card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient mt-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white ">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row p-4">
            <div class="col-md-12">
                <section>
                    <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @Html.AntiForgeryToken()
                        <h4 class="border-bottom pb-3 mb-4 text-center">Create a new account</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" id="passwordInput" />
                            <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                            <!-- Password requirements go under the password field -->
                            <div class="password-requirements text-sm text-muted mt-2">
                                <ul class="m-0" style="list-style: none; padding-left: 15px;">
                                    <li id="req-length" class="req-item">
                                        <span class="req-icon">○</span> Minimum 8 characters
                                    </li>
                                    <li id="req-lower" class="req-item">
                                        <span class="req-icon">○</span> At least 1 lowercase letter
                                    </li>
                                    <li id="req-upper" class="req-item">
                                        <span class="req-icon">○</span> At least 1 uppercase letter
                                    </li>
                                    <li id="req-number" class="req-item">
                                        <span class="req-icon">○</span> At least 1 number
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Input.Name" class="ms-2 text-muted">Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Input.StreetAddress" class="ms-2 text-muted">Street Address</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Input.City" class="ms-2 text-muted">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.State" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Input.State" class="ms-2 text-muted">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Input.PostalCode" class="ms-2 text-muted">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="" pattern="^\+?[0-9\s\-()]{7,20}$" />
                            <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        @if(User.IsInRole("Admin"))
						{
							<div class="form-floating mb-3 col-md-6">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" onchange="Select()">
                                    <option disabled selected>--Select Role--</option>
                                </select>
                            </div>
                        }
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" class="form-select">
                                <option disabled selected>--Select Company--</option>
                            </select>
                        </div>

                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="g-recaptcha" data-sitekey="6LdMkSAsAAAAALeYNHTWIu_qVw49a3pfU8xgLfjY"></div>
                            </div>

                            <div class="col">
                                <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary w-100">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </section>                
            </div>
            <div class="col-md-12">
                <section>
                    <p class="divider-text d-flex pt-3">or</p>
                    <h4>Use another service to register.</h4>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // -----------------------------
        // Handle showing/hiding Company dropdown
        // -----------------------------
        $(document).ready(function () {
            document.getElementById("Input_CompanyId").style.display = 'none';
        });

        function Select() {
            const select = document.getElementById("Input_Role");
            const text = select.options[select.selectedIndex].text;

            document.getElementById("Input_CompanyId").style.display =
                text === "Company" ? "block" : "none";
        }


        // -----------------------------
        // Password requirement validation
        // -----------------------------
        const passwordInput = document.getElementById("passwordInput");

        function toggleValidity(id, condition) {
            const el = document.getElementById(id);
            if (!el) return;  // FIXED TYPO (no random "n")

            condition
                ? el.classList.add("valid")
                : el.classList.remove("valid");
        }

        passwordInput.addEventListener("input", function () {
            const value = passwordInput.value;

            toggleValidity("req-length", value.length >= 8);
            toggleValidity("req-lower", /[a-z]/.test(value));
            toggleValidity("req-upper", /[A-Z]/.test(value));
            toggleValidity("req-number", /\d/.test(value));
            // toggleValidity("req-special", /[^A-Za-z0-9]/.test(value));
        });


        // -----------------------------
        // Show/hide password toggle
        // -----------------------------
        function togglePassword() {
            passwordInput.type =
                passwordInput.type === "password" ? "text" : "password";
        }
    </script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}