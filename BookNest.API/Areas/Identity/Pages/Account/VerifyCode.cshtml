@page
@model BookNest.Areas.Identity.Pages.Account.VerifyCodeModel
@{
    ViewData["Title"] = "Verify Code";
}

<h2 class="mt-4">Two-Step Verification</h2>
<p class="text-muted">
    A verification code has been sent to your email: <strong>@Model.Email</strong>.
</p>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Input.Email" />

    <div class="form-group mb-3">
        <label asp-for="Input.Code"></label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Verify</button>
</form>

<hr />

<form method="post" asp-page-handler="Resend">
    <input type="hidden" asp-for="Input.Email" />

    <button type="submit" id="resendBtn" class="btn btn-outline-secondary w-100">
        Resend Code
    </button>

    <div id="resendLabel" class="text-muted mt-1" style="font-size: 0.9em;"></div>
</form>

@section Scripts {
    <script>
        const cooldown = @((int?)ViewData["CooldownRemaining"] ?? 0);

        if (cooldown > 0) {
            let button = document.getElementById("resendBtn");
            let label = document.getElementById("resendLabel");

            button.disabled = true;

            let seconds = cooldown;

            label.innerText = `Resend available in ${seconds}s`;

            let interval = setInterval(() => {
                seconds--;
                if (seconds <= 0) {
                    clearInterval(interval);
                    button.disabled = false;
                    label.innerText = "You can resend the code now.";
                } else {
                    label.innerText = `Resend available in ${seconds}s`;
                }
            }, 1000);
        }
    </script>
}