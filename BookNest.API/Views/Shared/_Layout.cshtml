<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookNest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookNest.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookNest</a>
                
                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav content -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left: Nav links -->
                    <ul class="navbar-nav align-items-center gap-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>


                        @if (User.IsInRole(StaticDetails.ROLE_ADMIN))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </li>
                        }  

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> &nbsp; (0)
                            </a>
                        </li>

                        <!-- Search Bar -->
                        <div class="d-flex align-items-center mx-auto search-bar-wrapper">
                            <form class="d-flex align-items-center" role="search" onsubmit="return false;">
                                <input class="form-control" type="search" placeholder="Search books..." aria-label="Search">
                            </form>
                            <button class="btn btn-outline-light ms-2" type="button" disabled>
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </ul>

                    <!-- Right: Login / Register -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-light pt-5 pb-4 mt-5">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">

                <!-- Brand / About -->
                <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mt-3">
                    <h5 class="text-uppercase fw-bold mb-4">
                        <i class="bi bi-book-half me-2"></i>BookNest
                    </h5>
                    <p class="small">
                        Discover your next great read at BookNest — where stories take flight.
                        From timeless classics to modern bestsellers, we bring literature closer to you.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">Quick Links</h6>
                    <p><a href="/" class="text-light text-decoration-none">Home</a></p>
                    <p><a href="/Customer/Home/Shop" class="text-light text-decoration-none">Shop</a></p>
                    <p><a href="/Customer/Home/About" class="text-light text-decoration-none">About Us</a></p>
                    <p><a href="/Customer/Home/Contact" class="text-light text-decoration-none">Contact</a></p>
                </div>

                <!-- Policies -->
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">Policies</h6>
                    <p><a href="/Customer/Home/Privacy" class="text-light text-decoration-none">Privacy Policy</a></p>
                    <p><a href="/Customer/Home/Terms" class="text-light text-decoration-none">Terms & Conditions</a></p>
                    <p><a href="/Customer/Home/Returns" class="text-light text-decoration-none">Returns & Refunds</a></p>
                </div>

                <!-- Contact Info -->
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">Contact</h6>
                    <p><i class="bi bi-geo-alt-fill me-2"></i> 123 Nguyen Trai, Hanoi, Vietnam</p>
                    <p><i class="bi bi-envelope-fill me-2"></i> support@booknest.vn</p>
                    <p><i class="bi bi-telephone-fill me-2"></i> +84 987 654 321</p>
                    <div class="mt-3">
                        <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-twitter-x fs-5"></i></a>
                    </div>
                </div>
            </div>

            <hr class="my-4 text-light" />

            <!-- Bottom bar -->
            <div class="text-center">
                <p class="mb-0 small">
                    &copy; @DateTime.Now.Year BookNest. All rights reserved. | Built with ❤️ using ASP.NET Core
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/p0t0mpdd46j0panecmtylw6e5efi7bnrpljfcknqdcw2agog/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
