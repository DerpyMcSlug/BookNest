@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            @*
            <li class="nav-item">
                <a class="nav-link"
                   asp-area="Admin"
                   asp-controller="AuditLog"
                   asp-action="Index">
                    <i class="bi bi-clipboard-data"></i> Audit Logs
                </a>
            </li>*@

            <li class="nav-item">
                <a class="nav-link" asp-area="Admin"
                   asp-controller="ContentManagement"
                   asp-action="Index">
                    Content Management
                </a>
            </li>
        }

        <li class="nav-item dropdown">
            <button id="settingsDropdown"
                    class="btn nav-link dropdown-toggle px-2"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="bi bi-gear-fill"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end shadow">

                <!-- Account -->
                <li>
                    <a class="dropdown-item"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index">
                        <i class="bi bi-person-gear me-2"></i>Account
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Customer"
                       asp-controller="Order"
                       asp-action="History">
                        <i class="bi bi-receipt-cutoff me-2"></i>My Orders
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Customer"
                       asp-controller="Wishlist"
                       asp-action="Index">
                        <i class="bi bi-star me-2"></i>Wishlist
                    </a>
                </li>

                <!-- Logout -->
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
