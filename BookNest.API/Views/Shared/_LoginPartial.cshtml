@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <button id="settingsDropdown"
                    class="btn nav-link dropdown-toggle px-2"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="bi bi-gear-fill"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end shadow">

                <!-- Account -->
                <li>
                    <a class="dropdown-item"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index">
                        <i class="bi bi-person-gear me-2"></i>Account
                    </a>
                </li>

                <li>
                    <a class="dropdown-item"
                       asp-area="Customer"
                       asp-controller="Order"
                       asp-action="History">
                        <i class="bi bi-receipt-cutoff me-2"></i>My Orders
                    </a>
                </li>

                <!-- Admin panel section -->
                @if (User.IsInRole(BookNest.Utility.StaticDetails.ROLE_ADMIN))
                {
                    <li class="dropdown-submenu">
                        <a class="dropdown-item dropdown-toggle" href="#">
                            <i class="bi bi-tools me-2"></i>Content Management
                        </a>

                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Category" asp-action="Index">
                                    Category
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Product" asp-action="Index">
                                    Product
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Company" asp-action="Index">
                                    Company
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li><hr class="dropdown-divider" /></li>
                }

                <!-- Logout -->
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>